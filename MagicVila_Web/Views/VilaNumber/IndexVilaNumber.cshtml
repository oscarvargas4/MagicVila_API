@model IEnumerable<MagicVila_Web.Models.Dto.VilaNumberDto>
<br />
<div class="container" p-4 border>
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Vila Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VilaNumber" asp-action="CreateVilaNumber" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Create New Vila Number</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Vila Name
                </th>
                <th>
                    Vila Number
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Vila.Name</td>
                    <td>@item.VilaNo</td>
                    <td>
                        <a asp-controller="VilaNumber" asp-action="UpdateNumberVila" asp-route-vilaNo="@item.VilaNo" class="btn btn-success"><i class="bi bi-pen"></i></a>
                        <a asp-controller="VilaNumber" asp-action="DeleteNumberVila" asp-route-vilaNo="@item.VilaNo" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>