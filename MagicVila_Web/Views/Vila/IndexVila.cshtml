@model IEnumerable<MagicVila_Web.Models.Dto.VilaDto.VilaDto>
<br />
<div class="container" p-4 border>
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Vila List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Vila" asp-action="CreateVila" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Create New Vila</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Occupancy
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Occupancy</td>
                    <td>@((item.Rate).ToString("C"))</td>
                    <td>
                        <a asp-controller="Vila" asp-action="UpdateVila" class="btn btn-success"><i class="bi bi-pen"></i></a>
                        <a asp-controller="Vila" asp-action="DeleteVila" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>